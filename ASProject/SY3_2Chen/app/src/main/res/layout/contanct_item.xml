<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/contact_name"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="#62E200"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/contact_phone"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/contact_name"
        android:layout_alignBottom="@+id/contact_name"
        android:gravity="center"
        android:textColor="#62E200"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/contact_email"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/contact_phone"
        android:layout_alignBottom="@+id/contact_name"
        android:gravity="center"
        android:textColor="#62E200"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/contact_short"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/contact_email"
        android:layout_alignBottom="@+id/contact_name"
        android:gravity="center"
        android:textColor="#62E200"
        android:textSize="15sp"/>
</RelativeLayout>
